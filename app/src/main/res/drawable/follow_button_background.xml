<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Following state (pressed/highlighted) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#FF6B35" />
            <stroke android:width="2dp" android:color="#FFE0B2" />
        </shape>
    </item>

    <!-- Following state (normal) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#FF8C42" />
            <stroke android:width="2dp" android:color="#FFE0B2" />
        </shape>
    </item>

    <!-- Follow state (pressed/highlighted) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#4CAF50" />
            <stroke android:width="2dp" android:color="#81C784" />
        </shape>
    </item>

    <!-- Default state (Follow) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#4CAF50" />
            <stroke android:width="2dp" android:color="#81C784" />
        </shape>
    </item>
</selector>
